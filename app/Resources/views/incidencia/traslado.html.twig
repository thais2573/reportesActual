{% block main %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Principal</li>
        <li class="breadcrumb-item active">
           Movimiento Traslado Interno
        </li>
        <!-- Breadcrumb Menu-->
        <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">
                <a class="btn" href="#">
                    <i class="icon-speech"></i>
                </a>
                <a class="btn" href="./">
                    <i class="icon-graph"></i>  Dashboard</a>
                <a class="btn" href="#">
                    <i class="icon-settings"></i>  Settings</a>
            </div>
        </li>
    </ol>

    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong> Traslado de {{ nombre }}</strong>
                        </div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label"
                                       for="form-ci">Estación Trabajo:</label>
                                <div class="col-md-2">
                                    <input class="form-control"
                                           readonly
                                           id="form-ci"
                                           type="text"
                                           name="form-ci"
                                           value="{{ inventario.nombreRed }}">
                                </div>
                                <label class="col-md-2 col-form-label" for="form-reg">Modelo:</label>
                                <div class="col-md-2">
                                    <input class="form-control"
                                           readonly
                                           id="form-reg"
                                           type="text"
                                           name="form-reg"
                                           value="{{ asesorio.modelo }}">
                                </div>
                            </div>
                            {% if asesorio.marca is defined %}
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label"
                                       for="form-ci">Marca:</label>
                                <div class="col-md-2">
                                    <input class="form-control"
                                           readonly
                                           id="form-ci"
                                           type="text"
                                           name="form-ci"
                                           value="{{ asesorio.marca }}">
                                </div>
                                {% endif %}
                                <label class="col-md-2 col-form-label" for="form-reg">No.
                                    Serie:</label>
                                <div class="col-md-2">
                                    <input class="form-control"
                                           readonly
                                           id="form-reg"
                                           type="text"
                                           name="form-reg"
                                           value="{{ asesorio.serie }}">
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ form_start(movimientoForm) }}
                    <div class="card">
                        <div class="card-header">
                            <strong>Traslado </strong>Interno
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-4">
                                    <label class="col-md-5 col-form-label"
                                           for="form-sex">Responsable:</label>
                                    <div class="col-sm-8">
                                        <input class="form-control"
                                               readonly
                                               id="form-sex"
                                               type="text"
                                               name="form-sex"
                                               value="{{ inventario.responsable }}">
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <label class="col-md-5 col-form-label" for="form-reg">Área Entrega:</label>
                                    <div class="col-md-6">
                                        <input class="form-control"
                                               readonly
                                               id="form-reg"
                                               type="text"
                                               name="form-reg"
                                               value="{{ inventario.centroCosto }}">
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label for="app_bundlemovimiento3form_type[receptor]" class="control-label">Receptor:</label>
                                        <div class="control">
                                            <select id="app_bundlemovimiento3form_type_receptor"
                                                    name="app_bundlemovimiento3form_type[receptor]"
                                                    required="required" style="width: 400px">
                                                {% for usuario in usuarios if usuario.username not in usuarios %}
                                                    <option
                                                            value="{{ usuario['first_name'] }}&nbsp;{{ usuario['last_name'] }}">{{ usuario['first_name'] }} {{ usuario['last_name'] }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                </div>


                            </div>
                            {#<div class="row">#}

                            {#<div class="col-lg-6">#}
                            {#{{ form_row(movimientoForm.areaDestino) }}#}
                            {#</div>#}
                            {#</div>#}
                            <div class="row">
                                <div class="col-lg-4">
                                    <label class="col-md-5 col-form-label" for="tipo">Departamento</label> &nbsp;
                                    <select id="areas" name="usuarios[]" class="custom-select" style="width: 400px">
                                        {% set cant=0 %}
                                        {% for area in areas %}
                                            {#<option value={{ departamento.id }}>{{ usuario.username }}</option>#}
                                            <option id="{{ area.idArea }}"
                                                    value="{{ area.nombre }}">{{ area.nombre }}</option>
                                            {% set cant=cant+1 %}
                                        {% endfor %}
                                    </select>
                                </div>

                                <div class="col-lg-4">
                                    <label for="app_bundlemovimiento3form_type[areaDestino]" class="col-8">Centro de
                                        Costo</label>
                                    <select id="app_bundlemovimiento3form_type_areaDestino"
                                            name="app_bundlemovimiento3form_type[areaDestino] " class="custom-select"
                                            style="width: 400px">
                                        {#<option value="{{ departamento[cant1]['Desc_AreaResponsabilidad'] }}" >{{ departamento[cant1]['Desc_AreaResponsabilidad'] }}</option>#}
                                    </select>
                                </div>
                                <div class="col-lg-4">

                                    <label class="col-5">Estacion</label> &nbsp;

                                    <select id="estaciones" name="estaciones[] " class="custom-select"
                                            style="width: 400px">


                                        {#<option value="{{ departamento[cant1]['Desc_AreaResponsabilidad'] }}" >{{ departamento[cant1]['Desc_AreaResponsabilidad'] }}</option>#}

                                    </select>
                                </div>

                                {#<div class="col-md-4">#}
                                {#{{ form_row(movimientoForm.areaDestino) }}#}
                                {#</div>#}
                            </div>
                        </div>
                        <div class="card-header">
                            <strong>Responsables </strong>Movimiento
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-4">
                                    {{ form_row(movimientoForm.aprobado) }}
                                </div>
                                <div class="col-lg-4">
                                    {{ form_row(movimientoForm.autorizado) }}
                                </div>

                                <div class="col-lg-4">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="app_bundlemovimiento3form_type[respAFT]" class="control-label">Responsable
                                                AFT:</label>
                                            <div class="control">

                                                <select id="app_bundlemovimiento3form_type_respAFT"
                                                        name="app_bundlemovimiento3form_type[respAFT]"
                                                        required="required" style="width: 400px">
                                                    {% for usuario in usuarios if usuario.username not in usuarios %}
                                                        <option
                                                                value="{{ usuario['first_name'] }}&nbsp;{{ usuario['last_name'] }}">{{ usuario['first_name'] }} {{ usuario['last_name'] }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>


                        <div class="card-footer">

                            <button class="btn btn-success" type="submit" formnovalidate>Salvar</button>
                        </div>

                        {{ form_end(movimientoForm,{'render_rest':false}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% block javascripts %}
        {{ parent() }}
        <script type="application/javascript">
            $(document).ready(function () {
                $('#app_bundlemovimiento3form_type_respAFT,#app_bundlemovimiento3form_type_receptor,#app_bundlemovimiento3form_type_areaDestino').select2({
                    placeholder: "---Seleccione---"
                });
            });
