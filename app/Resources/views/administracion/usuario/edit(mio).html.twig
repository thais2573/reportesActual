{% extends 'base.html.twig' %}
{% block javascripts %}
  {{ parent() }}
    <script src="{{ asset('bundles/sigh/js/admin/admin.js') }}" type="text/javascript"></script>
{% endblock %}
{% block body %}
    <fieldset style="margin-left: 5px; margin-right: 5px;">
        <legend style="text-align: center; font-size: 16px; font-weight: bold;">Editar Usuario</legend>
    </fieldset>

    <div class="container-fluid">
      {{ form_start(edit_form, {'attr':{ 'class': 'validate', 'novalidate' : 'novalidate'}}) }}

        <div class="form-group row">
            <div class="col-md-4">
                <div class="form-group">
                    <div class="error text-exception">{{ form_errors(edit_form.username) }}</div>
                    <label for="usuario[username]" class="control-label">Usuarios del Sistema</label>
                    <div class="control" style="width: 200px">
                      {{ form_widget(edit_form.username) }}
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <div class="error text-exception">{{ form_errors(edit_form.estado) }}</div>
                    <label for="usuario[estado]" class="control-label">Estado*</label>
                    <div class="control" style="width: 200px">
                      {{ form_widget(edit_form.estado) }}
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <div class="error text-exception">{{ form_errors(edit_form.grupos) }}</div>
                    <label for="usuario[grupos]" class="control-label">Grupos</label>
                    <div class="control" style="width: 400px">
                      {{ form_widget(edit_form.grupos) }}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div class="error text-exception">{{ form_errors(edit_form.password) }}</div>
                    <label for="usuario[password]" class="control-label">Contrase√±a*</label>
                    <div class="control" style="width: 200px">
                      {{ form_widget(edit_form.password) }}
                    </div>
                </div>
            </div>
        </div>
        <div style="display: none">{{ form_widget(edit_form) }}</div>
        <div class="modal-footer">
            <input class="btn btn-info editar" type="submit" value="Editar" />
            <a id="back" class="btn btn-info" type="button" href="{{ path('administracion_usuario_index') }}">Regresar</a>
        </div>

      {{ form_end(edit_form) }}
    </div>
{% endblock %}
