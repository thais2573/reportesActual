{% extends 'administracion/login/base_login.html.twig' %}
{% block contenido %}
    <div class="container">
        <div class="row" id="container-login">
            <div class="col-md-4 col-md-offset-4">

                {% for flashMessage in app.session.flashbag.get('error') %}
                    <em class="error msg-flash" style="font-size: 17px;">{{ flashMessage }}</em>
                {% endfor %}

                <div class="" style="margin-left: -100px; margin-top: -50px; width: 520px; height: 520px;background-image: url({{ asset('images/login.png') }});  ">
                    <div class="panel-heading">
                        {#<img class="p-t-10" src="{{ asset('images/Logotipo (2).png') }}">#}
                        {#<img class="p-t-10" src="{{ asset('images/Logo.png') }}">#}
                    </div>
                    <div class="panel-body">
                        <form role="form" id="form-login" action="{{ path('login_check') }}"  method="post"  class="validate-login" novalidate="novalidate">
                            <fieldset style="width: 200px; margin-left: 165px; margin-top: 90px">
                                <img src="{{ asset('images/sightt.png') }}" style="margin-top: -5px;" />
                                <div class="form-group label-floating">

                                    <input class="form-control" required="required" placeholder="Usuario" style="border-radius: 10px; background-color:#fff !important;"  data-msg-required="Campo obligatorio" name="_username" type="text" value="{{ last_username }}">
                                </div>
                                <div class="form-group label-floating">

                                    <input class="form-control" required="required" data-msg-required="Campo obligatorio" name="_password"  size="14" type="password" style="border-radius: 10px" placeholder="Contraseña">
                                </div>
                                <div id="error-login">
                                    {% if error %}
                                        <em class="error">Usuario y/o contraseña incorrecto</em>
                                    {% else %}
                                        {#<em>Escriba su usuario y contraseña de la Intranet</em>#}
                                    {% endif %}
                                </div>
                                <button type="submit" id="btn-login" class="btn btn-lg btn-primary btn-block" style="width: 200px; border-radius: 10px; -webkit-box-shadow: -4px 3px 13px 4px rgba(255,255,255,0.34);
-moz-box-shadow: -4px 3px 13px 4px rgba(255,255,255,0.34);
box-shadow: -4px 3px 13px 4px rgba(255,255,255,0.34); ">Entrar</button>
                            </fieldset>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
