{% extends 'base.html.twig' %}

{% block body %}
    <fieldset style="margin-left: 5px; margin-right: 5px;">
        <legend style="text-align: center; font-size: 16px; font-weight: bold;">Trazas del Sistema</legend>

        <table id="example" class="table table-striped table-bordered" width="100%" cellspacing="0">
            <thead>
            <tr>
                <th>Fecha</th>
                <th>IP de la PC</th>
                <th>Accion</th>
                <th>Detalles</th>
                <th>Entidad</th>
                <th>Usuario</th>
            </tr>
            </thead>
            <tfoot>
            <tr>
                <th>Fecha</th>
                <th>IP de la PC</th>
                <th>Accion</th>
                <th>Detalles</th>
                <th>Entidad</th>
                <th>Usuario</th>
            </tr>
            </tfoot>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.fecha | date('d-m-Y h:m A') }}</td>
                    <td>{{ entity.ipPc }}</td>
                    <td>{{ entity.getTipoAccionString }}</td>
                    <td>{{ entity.getDatosModString | nl2br }}</td>
                    <td>{{ entity.getTablaImplicadaString }}</td>
                    <td>{{ entity.usuario }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </fieldset>
{% endblock %}