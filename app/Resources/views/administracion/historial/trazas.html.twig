{% extends 'layout/layout.html.twig' %}

{% block main %}
  <!-- Breadcrumb-->
  <ol class="breadcrumb">
    <li class="breadcrumb-item">Principal</li>
    <li class="breadcrumb-item active">
      <a href="#">Lista de Incidencias</a>
    </li>
    <!-- Breadcrumb Menu-->
    <li class="breadcrumb-menu d-md-down-none">
      <div class="btn-group" role="group" aria-label="Button group">
        <a class="btn" href="#">
          <i class="icon-speech"></i>
        </a>
        <a class="btn" href="./">
          <i class="icon-graph"></i>  Dashboard</a>
        <a class="btn" href="#">
          <i class="icon-settings"></i>  Settings</a>
      </div>
    </li>
  </ol>
  <div class="container-fluid">
    <div class="animated fadeIn"></div>
  </div>

  <div class="container-fluid">
    <div class="animated fadeIn">
      <div class="row">
        <div class="col-lg-12">
          {% for message in app.session.flashBag.get('success') %}
            <div class="alert alert-success" role="alert">
              {{ message }}
            </div>
          {% endfor %}



          <div class="card">
            <div class="card-header">

              <i class="fa fa-align-justify"></i> <strong>Listado de Incidencias </strong>

              <strong> {{ pagination.getTotalItemCount }} </strong>
              <a class="btn btn-primary pull-right" href="{{ path('dh_doctrine_audit_show_audit_entry',{'entity':"AppBundle:equipo",'id':367}) }}"><i
                  class="nav-icon icon-note"
                  data-toggle="tooltip" data-placement="bottom"
                  title="Nueva Incidencia"></i> Nuevo</a>

            </div>


            <div class="card-body">
              <br>
              <table class="table table-responsive-sm table-bordered table-striped table-sm">

                <thead>
                <tr>

                  <th>{{ knp_pagination_sortable(pagination, 'Id incidencia','') }}</th>
                  <th>Tipo de incidencia</th>
                  <th>Departamento</th>
                  <th>Asunto</th>
                  <th>Equipo</th>
                  <th>No.Inventario</th>
                  <th>Fecha Reporte</th>
                  <th>Estado</th>
                  <th>Acciones</th>


                </tr>
                </thead>
                <tbody>
                {% for incidencia in pagination %}
                  <tr {% if loop.index is odd %}class="color"{% endif %}>
                    <td>{{ incidencia.id }}</td>
                    <td>{{ incidencia.numInventario }}</td>



                    </td>

                  </tr>
                {% endfor %}
                </tbody>
              </table>
              <div class="navigation">
                {{ knp_pagination_render(pagination) }}
              </div>
            </div>

          </div>
        </div>
        <!-- /.col-->
      </div>
    </div>
  </div>

{% endblock %}