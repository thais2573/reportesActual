{% extends 'layout/layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <!-- CoreUI CSS -->
    <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
    <link rel="stylesheet" href="{{ asset('build/css/style.css') }}">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <link rel="stylesheet" href="{{ asset('build/css/bootstrap.min.css') }}"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script src="{{ asset('bundles/sigh/js/nomencladores/nomencladores.js') }}" type="text/javascript"></script>
{% endblock %}
{% block main %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Principal</li>
        <li class="breadcrumb-item active">
            <a>Editar grupo </a>
        </li>
    </ol>
    <fieldset style="margin-left: 5px; margin-right: 5px;">
        <legend style="text-align: center; font-size: 16px; font-weight: bold;">Editar Grupo de usuario</legend>
    </fieldset>

    <div class="container-fluid">
        {{ form_start(edit_form, {'attr':{ 'class': 'validate', 'novalidate' : 'novalidate'}}) }}

        <div class="form-group row">
            <div class="col-md-6">
                <div class="form-group">
                    <div class="error text-exception">{{ form_errors(edit_form.nombre) }}</div>
                    <label for="usuario[username]" class="control-label">Nombre de grupo*</label>
                    <div class="control" style="width: 200px">
                        {{ form_widget(edit_form.nombre) }}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div class="error text-exception">{{ form_errors(edit_form.roles) }}</div>
                    <label for="usuario[roles]" class="control-label">Roles*</label>
                    <div class="control" style="width: 400px">
                        {{ form_widget(edit_form.roles) }}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div class="error text-exception">{{ form_errors(edit_form.descripcion) }}</div>
                    <label for="usuario[password]" class="control-label">Descripci√≥n</label>
                    <div class="control">
                        {{ form_widget(edit_form.descripcion) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <input class="btn btn-info" type="submit" value="Editar" />
            <a class="btn btn-info" type="button" href="{{ path('nomencladores_grupousuario_index') }}">Regresar</a>
        </div>

        {{ form_end(edit_form) }}
    </div>
{% endblock %}
