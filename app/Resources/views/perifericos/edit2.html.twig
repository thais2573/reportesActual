{% extends 'layout/layout.html.twig' %}
{% block main %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Principal</li>
        <li class="breadcrumb-item active">
            <a href="#">Reposición</a>
        </li>
        <!-- Breadcrumb Menu-->
        <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">
                <a class="btn" href="#">
                    <i class="icon-speech"></i>
                </a>
                <a class="btn" href="./">
                    <i class="icon-graph"></i>  Dashboard</a>
                <a class="btn" href="#">
                    <i class="icon-settings"></i>  Settings</a>
            </div>
        </li>
    </ol>

    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong> {{ nombre }} Roto</strong>
                        </div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label"
                                       for="form-ci">Estación Trabajo Pertenece:</label>
                                <div class="col-md-2">
                                    <input class="form-control"
                                           readonly
                                           id="form-ci"
                                           type="text"
                                           name="form-ci"
                                           value="{{ inventario.nombreRed }}  ({{ inventario.id }})">
                                </div>
                                <label class="col-md-2 col-form-label" for="form-reg">Departamento:</label>
                                <div class="col-md-2">
                                    <input class="form-control"
                                           readonly
                                           id="form-reg"
                                           type="text"
                                           name="form-reg"
                                           value="{{ inventario.dpto }}">
                                </div>

                                <label class="col-md-2 col-form-label"
                                       for="form-sex">Responsable Equipo:</label>
                                <div class="col-md-2">
                                    <input class="form-control"
                                           readonly
                                           id="form-sex"
                                           type="text"
                                           name="form-sex"
                                           value="{{ inventario.responsable }}">
                                </div>
                            </div>
                            <hr>

                            <div class="form-group row">
                                <label class="col-md-2 col-form-label"
                                       for="form-ci">Modelo:</label>
                                <div class="col-md-2">
                                    <input class="form-control"
                                           readonly
                                           id="form-ci"
                                           type="text"
                                           name="form-ci"
                                           value="{{ equipo.modelo }}">
                                </div>
                                <label class="col-md-2 col-form-label" for="form-reg">No.
                                    Inventario:</label>
                                <div class="col-md-2">
                                    <input class="form-control"
                                           readonly
                                           id="form-reg"
                                           type="text"
                                           name="form-reg"
                                           value="{{ equipo.numInventario }}">
                                </div>

                                <label class="col-md-2 col-form-label"
                                       for="form-sex">Color:</label>
                                <div class="col-md-2">
                                    <input class="form-control"
                                           readonly
                                           id="form-sex"
                                           type="text"
                                           name="form-sex"
                                           value="{{ equipo.color }}">
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    {{ form_start(equipoForm) }}
                    <div class="card">
                        <div class="card-header">
                            <strong>Actualizar datos del {{ nombre }} Nuevo </strong>

                        </div>

                        <div class="card-body">

                            <div class="row">

                                <div class="col-lg-6">
                                    {{ form_row(equipoForm.modelo) }}
                                    {{ form_row(equipoForm.numInventario) }}

                                </div>
                                <div class="col-lg-6">
                                    {{ form_row(equipoForm.color) }}
                                    {{ form_row(equipoForm.selloSeguridad) }}

                                </div>
                                <div class="col-lg-6">
                                    {{ form_row(equipoForm.fechaMantenimiento) }}
                                </div>


                            </div>

                        </div>
                        {{ form_widget(equipoForm._token) }}
                        {{ form_end(equipoForm,{'render_rest':false}) }}
                        <div class="card-footer">

                            <button class="btn btn-success" type="submit" formnovalidate>Actualizar</button>
                        </div>

                    </div>
                </div>



            </div>
        </div>
    </div>
    </div>
    </div>

{% endblock %}
