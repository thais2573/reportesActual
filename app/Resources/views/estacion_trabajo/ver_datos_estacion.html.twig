{% extends 'layout/layout.html.twig' %}

{% block main %}
  <!-- Breadcrumb-->
  <ol class="breadcrumb">
    <li class="breadcrumb-item">Principal</li>
    <li class="breadcrumb-item active">
      <a href="#">Datos del componente</a>

    </li>
    <!-- Breadcrumb Menu-->
    <li class="breadcrumb-menu d-md-down-none">
      <div class="btn-group" role="group" aria-label="Button group">
        <a class="btn" href="#">
          <i class="icon-speech"></i>
        </a>
        <a class="btn" href="./">
          <i class="icon-graph"></i>  Dashboard</a>
        <a class="btn" href="#">
          <i class="icon-settings"></i>  Settings</a>
      </div>
    </li>
  </ol>
  <div class="container-fluid">
    <div class="animated fadeIn"></div>
  </div>

  <div class="container-fluid">
  <div class="animated fadeIn">
    <div class="row">
      <div class="col-lg-12">
        {% for message in app.session.flashBag.get('success') %}
          <div class="alert alert-success" role="alert">
            {{ message }}
          </div>
        {% endfor %}

        <div class="card">
          <div class="card-header">
            <strong>Datos de estacion {{ datos.nombreRed  }}</strong></div>

          <div class="card-body">
            <div class="form-group row">

              <div class="col-sm-3">
                <label >Departamento</label>

                <input class="form-control" type="text"  value="{{ datos.centroCosto }}" disabled></div>
              <div class="col-sm-3">
                <label >Responsable</label>

                <input class="form-control" type="text"  value="{{ datos.responsable }} " disabled></div>
              <div class="col-sm-3">
                <label >Pass Setup</label>

                <input class="form-control" type="text"  value="{{ datos.passSetup }}" disabled></div>

            </div>

              <div class="form-group row">
                <div class="col-sm-3">
                  <label >IP</label>

                  <input class="form-control" type="text"  value="{{ datos.ip }}" disabled></div>
                <div class="col-sm-3">
                  <label>Técnico</label>

                  <input class="form-control" type="text"  value="" disabled>
                </div>
                <div class="col-3">
                  <label>Estado</label>

                  <input class="form-control" type="text"  value="" disabled>
                </div>
                <div class="col-sm-3">
                  <div class="col float-lg-none">
                    <img class="float-lg-right" src="{{ asset('img/iconos/computadora.png') }}"></div>

                </div>
           </div>



          </div>

          <div class="card-footer">




            <button class="btn btn-sm btn-primary" type="submit"
                    onclick="document.getElementById('reset').value = 0; forms[0].submit()">
              <i class="fa fa-plus-square"></i>
            </button>
            <button class="btn btn-sm btn-danger" type="reset"
                    onclick="document.getElementById('reset').value = 1; forms[0].submit()">
              <i class="fa fa-ban"></i> Cancelar
            </button>



          </div>



        </div>
        <!-- /.col-->
      </div>
    </div>
  </div>


{% endblock %}