        <td>{{ l.tipoPeriferico }}</td>
        <td>{{ l.numInventario }}</td>
        <td>{{ l.fechaSalida |date('d-m-Y') }}</td>
      </tr>
    {% endfor %}
    <tr><th colspan="5">Total:{{ laptops|length }}</th></tr>
  {% endif %}
  {% if estabilizadores |length>0 %}
    <tr><th colspan="5">Estabilizador</th></tr>
    {% for e in estabilizadores %}
      <tr {% if loop.index is odd %}class="color"{% endif %}>
        <td>{{ e.dpto }}</td>
        <td>{{ e.modelo }}</td>
        <td>{{ e.tipoPeriferico }}</td>
        <td>{{ e.numInventario }}</td>
        <td>{{ e.fechaSalida |date('d-m-Y') }}</td>
      </tr>
    {% endfor %}
    <tr><th colspan="5">Total:{{ estabilizadores|length }}</th></tr>
  {% endif %}<br>
  {% if proyectores |length>0 %}
    <tr><th colspan="5">Proyector</th></tr>
      {% for p in proyectores %}
        <tr {% if loop.index is odd %}class="color"{% endif %}>
          <td>{{ p.dpto }}</td>
          <td>{{ p.modelo }}</td>
          <td>{{ p.tipoPeriferico }}</td>
          <td>{{ p.numInventario }}</td>
          <td>{{ p.fechaSalida |date('d-m-Y') }}</td>
        </tr>
      {% endfor %}
    <tr><th colspan="5">Total:{{ proyectores|length }}</th></tr>
  {% endif %}<br>
