<h2 align="center">Equipos en taller </h2><br><br>
{% set backups = [] %}
{% set impresoras = [] %}
{% set monitores = [] %}
{% set cpuchasis = [] %}
{% set scanners = [] %}
{% set laptops = [] %}
{% set estabilizadores = [] %}
{% set proyectores=[] %}
{% for datos in lista %}
  {% if datos.tipoPeriferico =='backup' or datos.tipoPeriferico=='Backup' %}
    {% set backups = backups|merge([datos]) %}
  {% endif %}
  {% if  datos.tipoPeriferico =='impresora' or datos.tipoPeriferico=='Impresora' %}
    {% set impresoras = impresoras|merge([datos]) %}
  {% endif %}
  {% if  datos.tipoPeriferico =='monitor' or datos.tipoPeriferico=='Monitor' %}
    {% set monitores = monitores|merge([datos]) %}
  {% endif %}
  {% if  datos.tipoPeriferico =='cpuchasis' or datos.tipoPeriferico=='CPU-Chasis' %}
    {% set cpuchasis = cpuchasis|merge([datos]) %}
  {% endif %}
  {% if  datos.tipoPeriferico =='scanner' or datos.tipoPeriferico=='Scanner' %}
    {% set scanners = scanners|merge([datos]) %}
  {% endif %}
  {% if  datos.tipoPeriferico =='laptop' or datos.tipoPeriferico=='Laptop' %}
    {% set laptops = laptops|merge([datos]) %}
  {% endif %}
  {% if  datos.tipoPeriferico =='Estabilizador' or datos.tipoPeriferico=='estabilizador' %}
    {% set estabilizadores = estabilizadores|merge([datos]) %}
  {% endif %}
    {% if  datos.tipoPeriferico =='Proyector' or datos.tipoPeriferico=='proyector' %}
        {% set proyectores = proyectores|merge([datos]) %}
    {% endif %}
{% endfor %}
<table>
  <thead>
  </thead>
  <tbody>
  <tr>
    <th>Dpto.</th>
    <th>Modelo</th>
    <th>Equipo</th>
    <th>No.Inventario</th>
    <th>Salida</th>
  </tr>
  {% if backups|length>0 %}
    <tr><th colspan="5">Backup</th></tr>
    {% for b in backups %}
      <tr {% if loop.index is odd %}class="color"{% endif %}>
        <td>{{ b.dpto }}</td>
        <td>{{ b.modelo }}</td>
        <td>{{ b.tipoPeriferico }}</td>
        <td>{{ b.numInventario }}</td>
        <td>{{ b.fechaSalida |date('d-m-Y') }}</td>
      </tr>
    {% endfor %}
    <tr><th colspan="5">Total: {{ backups|length }}</th></tr>
  {% endif %}
  {% if impresoras|length>0 %}
    <tr><th colspan="5">Impresora</th></tr>
    {% for i in impresoras %}
      <tr {% if loop.index is odd %}class="color"{% endif %}>
