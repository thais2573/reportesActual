      <tr {% if loop.index is odd %}class="color"{% endif %}>
        <td>{{ s.dpto }}</td>
        <td>{{ s.modelo }}</td>
        <td>{{ s.tipoPeriferico }}</td>
        <td>{{ s.numInventario }}</td>
        <td>{{ s.fechaSalida |date('d-m-Y') }}</td>
      </tr>
    {% endfor %}
    <tr><th colspan="5">Total:{{ scanners|length }}</th></tr>
  {% endif %}
  {% if laptops |length>0 %}
