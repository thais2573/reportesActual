      </tr>
    {% endfor %}
    <tr><th colspan="5">Total:{{ monitores|length }}</th></tr>
  {% endif %}
  {% if cpuchasis |length>0 %}
    <tr><th colspan="5">Chasis</th></tr>
    {% for c in cpuchasis %}
      <tr {% if loop.index is odd %}class="color"{% endif %}>
        <td>{{ c.dpto }}</td>
