    <div class="card-body">
      <div>
        <form class="form-inline float-right" action="{{ path('filtra_equipostaller') }}" method="post">
          <div class="input-group ">
            <input class="form-control" id="numI" type="text" name="numI" placeholder="Numero de inventario">
