{% extends 'layout/layout.html.twig' %}

{% block main %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Home</li>
        <li class="breadcrumb-item active">
            <a href="#">Dashboard</a>
        </li>
        <!-- Breadcrumb Menu-->
        <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">
                <a class="btn" href="#">
                    <i class="icon-speech"></i>
                </a>
                <a class="btn" href="./">
                    <i class="icon-graph"></i>  Dashboard</a>
                <a class="btn" href="#">
                    <i class="icon-settings"></i>  Settings</a>
            </div>
        </li>
    </ol>
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    {{ form_start(tipoForm) }}
                    <div class="card">
                        <div class="card-header">
                            <strong>Editar Categoría</strong></div>
                        <div class="card-body">
                            <div class="row">

                                <div class="col-lg-6">
                                    {{ form_row(tipoForm.name) }}
                                </div>
                                <div class="col-lg-6">
                                    {{ form_row(tipoForm.prioridad) }}
                                </div>
                                <div class="col-lg-6">
                                    {{ form_row(tipoForm.permiso) }}
                                </div>


                            </div>
                        </div>
                            <div class="card-footer">
                                <a class="btn btn-primary" href="{{ path('tipo_list') }}">Atras</a>
                                <button class="btn btn-success" type="submit" formnovalidate>Continuar</button>
                            </div>
                            {{ form_widget(tipoForm._token) }}
                            {{ form_end(tipoForm,{'render_rest':false}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}